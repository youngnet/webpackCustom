{
    "presets": [
        [
            "@babel/preset-env",
            {
                "useBuiltIns": "entry",
                "shippedProposals": true,
                "targets": {
                    "esmodules": false,
                    "browsers": "> 0.25%"
                    // "chrome": "49",
                    // "ie": "8"
                },
                "loose": true,
                "modules": false,
            }
        ],
        "@babel/preset-react"
    ],
    "plugins": [
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
        // "@babel/plugin-transform-runtime"
    ]
}
