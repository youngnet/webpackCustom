{
    "presets": [
        [
            "@babel/env",
            {   
                "useBuiltIns": "entry",
                "corejs": 3,
                "shippedProposals": true,
                "targets": {
                    "esmodules": false,
                    "browsers": "> 0.25%"
                    // "chrome": "49",
                    // "ie": "8"
                },
                "loose": true,
                "modules": false
            }
        ],
        "@babel/react"
    ],
    "plugins": [
        ["@babel/plugin-proposal-class-properties", { "loose": true }],
        "@babel/transform-runtime"
    ]
}
